{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "class-methods-use-this": "off",
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "prettier/prettier": "error"
  }
}
